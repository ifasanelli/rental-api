<!DOCTYPE html>
<html>
  <head>
    <title>Rental API</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="http://localhost:4000/">Rental API</a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Fabricantes', manufacturers_path, class: 'nav-link' %><span class="sr-only">(current)</span>
          </li>
          <li class="nav-item active">
            <%= link_to 'Filiais', subsidiaries_path, class: 'nav-link' %><span class="sr-only">(current)</span>
          </li>
          <li class="nav-item active">
            <%= link_to 'Categorias', car_categories_path, class: 'nav-link' %><span class="sr-only">(current)</span>
          </li>
        </ul>
      </div>
    </nav>

    <p class="notice etc-pdn"><%= notice %></p>
    <p class="alert etc-pdn"><%= alert %></p>
    <%= yield %>
  </body>
</html>
